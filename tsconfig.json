{
  "include": [
    "src/**/*",
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": [
      "es2015"
    ],
    "outDir": "dist",
    "types": [
      "node",
    ],
    "forceConsistentCasingInFileNames": true,
  },
}